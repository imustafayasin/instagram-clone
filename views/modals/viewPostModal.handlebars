        padding-right: 16px;
    }

    .postModal .postInfo .content .content-actions .action {
        cursor: pointer;
        padding: 8px;
    }

    .postModal .postInfo .content .content-actions .actions-left {
        display: flex;
    }

    .postModal .postInfo .content .content-user {
